    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download3.vmware.com/software/view/viewclients/$matchDownloadgroup/VMware-Horizon-Client-$version.exe#/VMware-Horizon-Client-Setup.exe"
            }
