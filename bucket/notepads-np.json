    "architecture": {
        "64bit": {
            "url": "https://github.com/JasonStein/Notepads/releases/download/v1.2.1.0/Notepads_1.2.1.0_x64.zip",
            "hash": "cecc10c49a6e42ac917684298bbd3d5f69c961c64c403077399fa7a654bd37a6",
            "pre_install": [
                "if (!(is_admin)) {",
                "    error \"Administrator rights are required to install $app.\"",
                "    exit 1",
                "}",
                "",
                "New-Item \"$dir//notepads.ps1\" | Out-Null",
                "Set-Content \"$dir//notepads.ps1\" \"explorer shell:AppsFolder\\`$(Get-AppXPackage -name *Notepads* | select -expandproperty PackageFamilyName)`!App\"",
                "Move-Item ${dir}\\Notepads_${version}_x64\\* ${dir}",
                "Remove-Item ${dir}\\Notepads_${version}_x64",
                "$cert=New-Object System.Security.Cryptography.X509Certificates.X509Certificate2",
                "$cert.Import(\"${dir}\\Notepads_${version}_x64.cer\")",
                "$thumb = \"$cert.Thumbprint\"",
                "$store = \"TrustedPeople\"",
                "if (Get-ChildItem -Path Cert:\\LocalMachine\\$store | Where-Object {$_.Thumbprint -eq $thumb}) { return }",
                "certutil -addstore $store ${dir}\\Notepads_${version}_x64.cer",
                "gpupdate /force",
                "reg add \"HKEY_LOCAL_MACHINE\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\AppModelUnlock\" /t REG_DWORD /f /v \"AllowDevelopmentWithoutDevLicense\" /d \"1\""
            ],
            "post_install": "Add-AppxPackage \"${dir}//Notepads`_${version}`_x64.msixbundle\"",
            "uninstaller": {
                "script": [
                    "if (!(is_admin)) {",
                    "    error \"Administrator rights are required to uninstall $app.\"",
                    "    exit 1",
                    "}",
                    "",
                    "$store = \"TrustedPeople\"",
                    "certutil -delstore $store \"${dir}\\Notepads_$version_x64.cer\"",
                    "Get-AppxPackage -Name *Notepads* | Remove-AppxPackage -AllUsers"
                ]
            }
        },
        "32bit": {
