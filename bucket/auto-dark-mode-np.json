{
    "version": "10.0.0.26",
    "description": "Automatically switches between the dark and light theme of Windows 10 at scheduled times.",
    "homepage": "https://github.com/Armin2208/Windows-Auto-Night-Mode",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "url": "https://github.com/AutoDarkMode/Windows-Auto-Night-Mode/releases/download/10.0.0.26/AutoDarkModeX_10.0.0.26.exe",
    "hash": "04D1C0D669EAF217D3CBE1F596DAFDF3FCEF91A0EAE4686A3F9B5C5652ED9886",
    "notes": "Settings need to be reapplied after updating.",
    "installer": {
        "script": [
            "if ([Environment]::OSVersion.Version.Major -ne 10) {",
            "   error \"$app only supports Windows 10 or after.\"",
            "   exit 1",
            "}",
            "",
            "Invoke-ExternalCommand -FilePath \"$dir\\AutoDarkMode_v3_0_1_Setup.exe\" -ArgumentList @('/SP-', '/VERYSILENT', '/SUPPRESSMSGBOXES', '/NORESTART', \"/DIR=$dir\") -RunAs | Out-Null",
            "Remove-Item \"$dir\\AutoDarkMode_v3_0_1_Setup.exe\""
        ]
    },
    "uninstaller": {
        "file": "unins000.exe",
        "args": [
            "/VERYSILENT",
            "/SUPPRESSMSGBOXES",
            "/NORESTART"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/AutoDarkMode/Windows-Auto-Night-Mode/releases/download/$version/AutoDarkMode_v$underscoreVersion_Setup.exe"
    }
}
