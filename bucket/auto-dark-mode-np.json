{
    "version": "3.0",
    "description": "Automatically switches between the dark and light theme of Windows 10 at scheduled times.",
    "homepage": "https://github.com/Armin2208/Windows-Auto-Night-Mode",
    "license": {
        "identifier": "GPL-3.0-only"
    },
    "url": "https://github.com/Armin2208/Windows-Auto-Night-Mode/releases/download/3.0/AutoDarkMode_v3_Setup.zip",
    "hash": "9070876f8646688aff139faa699db86acfc4fe4b9ac7062131fca775392261cf",
    "installer": {
        "script": [
            "if ([Environment]::OSVersion.Version.Major -ne 10) {",
            "   error \"$app only supports Windows 10.\"",
            "   exit 1",
            "}",
            "",
            "Invoke-ExternalCommand -FilePath \"$dir\\AutoDarkMode_v3_Setup.exe\" -ArgumentList @('/SP-', '/VERYSILENT', '/SUPPRESSMSGBOXES', '/NORESTART', \"/DIR=$dir\") -RunAs | Out-Null",
            "Remove-Item \"$dir\\AutoDarkMode_v3_Setup.exe\""
        ]
    },
    "notes": "Settings need to be reapplied after updating.",
    "uninstaller": {
        "file": "unins000.exe",
        "args": [
            "/VERYSILENT",
            "/SUPPRESSMSGBOXES",
            "/NORESTART"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/Armin2208/Windows-Auto-Night-Mode/releases/download/$version/AutoDarkMode_v$majorVersion_Setup.zip"
    }
}
