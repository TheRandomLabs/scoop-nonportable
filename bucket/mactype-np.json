        "script": [
            "$text = @(",
            "    'If you encounter \"file in use\" error during uninstallation, try the following steps:'",
            "    '    1. Launch MacType Wizard (macwiz.exe) and select \"Manual\" mode.'",
            "    '    2. Reboot.'",
            "    '    3. Run `scoop uninstall mactype-np`.'",
            ")",
            "warn $($text -join \"`r`n\")"
        ]
    },
    "bin": [
        "MacTray.exe",
        "MacWiz.exe"
    ],
    "shortcuts": [
        [
            "MacTray.exe",
            "MacType Tray"
        ],
        [
            "MacWiz.exe",
            "MacType Wizard"
        ]
    ],
    "persist": [
        "ini",
        "MacType.ini"
    ],
    "checkver": {
